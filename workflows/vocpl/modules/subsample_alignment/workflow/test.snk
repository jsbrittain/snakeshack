configfile: "config/config.yaml"

# read seeds from file
with open("results/" + config["input_namespace"] + "/" + config["test"]["seeds_file"]) as f:
    keys = f.read().splitlines()

#Â default target all seeds listed in the seeds file
rule all:
    input:
        expand(
            "results/{outdir}/s{key}/subsample_aln.fasta",
            outdir=config["output_namespace"],
            key=keys,
        )

include: "Snakefile"
