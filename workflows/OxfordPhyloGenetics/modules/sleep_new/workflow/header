config["phyloflow"] = {'version', 0.1}
config["input_namespace"] = config.get("input_namespace", "in_namespace")
config["input_filename"] = config.get("input_filename", "in_file")
config["output_namespace"] = config.get("output_namespace", "out_namespace:")
config["output_filename"] = config.get("output_filename", "out_file")

rule in_name:
    output:
        expand(
            "results/{indir}/{infile}",
            indir=config["input_namespace"],
            infile=config["input_filename"],
        )

rule all:
    input:
        expand(
            "results/{outdir}/{outfile}",
            outdir=config["output_namespace"],
            outfile=config["output_filename"],
        ),
    default_target: True
